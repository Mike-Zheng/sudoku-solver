{
  "compilerOptions": {
    "outDir": "docs",
    "target": "esnext",
    "useDefineForClassFields": true,
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "allowJs": true,
    "lib": ["esnext", "dom"],
    "types": ["node"],
    "skipLibCheck": true,
    "paths": {
      "@/*": ["src/*"],
      "@config/*": ["config/*"],
      "@components/*": ["src/components/*"],
      "@utils/*": ["src/utils/*"],
      "@api/*": ["src/api/*"]
    }
  },
  "include": [".d.ts", "src/**/*.ts", "src/**/*.d.ts", "src/**/*.tsx", "src/**/*.vue", "**/*.ts", "**/*.md", "tailwind.config.js", "postcss.config.js"],
  "exclude": ["node_modules", "dist", "doc"]
}
